<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Kids link aggregator" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery" %>
  <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <div id="header">
        <h1>Kids LinkAggregator</h1>
        <div id="menu">
          <ul id="nav">
            <li><%= link_to 'Hjem', root_path%></li>
            <% if user_signed_in? %>
            <li><%= link_to 'Links', links_path%></li> 
            <li><%= link_to 'Kategorier', categories_path%></li>
          <% end %>
            <li><%= render 'devise/menu/login_items' %></li>
    </ul>
    </div>
  </div>
  <div id ="content">
    <div id="right">
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
    <div id="left">
      <div class="box">
      Her finder du alle de bedste links for b√∏rn
      </div>
    </div>
  </div>
  </div>
  </body>
</html>
