<%- content_for(:head) do -%>
<%= javascript_include_tag "formDeleter.js" -%>
<%- end -%>
<h1>Listing links</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Approved</th>
    <th>Url</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.name %></td>
    <td><%= link.approved %></td>
    <td><%= link.url %></td>
    <td><%= link.category_id %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :method => :delete, :class => 'delete'%></td>
  </tr>
<% end %>
</table>

